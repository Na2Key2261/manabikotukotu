<div class="container">
  <div class="row">
    <div class="col-md-3 border-right">
      <%= render "public/users/sidebar" %>
    </div>
    <div class="col-md-9">
      <div>
        <%= form_with model: [@post, @post_comment], url: public_post_post_comments_path(@post) do |f| %>
          <%= f.text_area :comment, rows: '5', placeholder: "コメントをここに" %>
          <%= f.submit "送信する" %>
        <% end %>
      </div>
      <div class="content">
        <p>コメント件数：<%= @post.post_comments.count %></p>
        <table class="table">
          <thead>
            <tr>
              <th></th>
              <th>ユーザー名</th>
              <th>投稿日時</th>
              <th>コメント内容</th>
              <th>操作</th>
            </tr>
          </thead>
          <tbody>
            <% @post.post_comments.each do |post_comment| %>
              <tr>
                <td><%= image_tag post_comment.user.image.variant(resize: "50x50"), class: "rounded-circle" if post_comment.user.image.attached? %></td>
                <td><%= post_comment.user.name %></td>
                <td><%= post_comment.created_at.strftime('%Y/%m/%d') %></td>
                <td><%= post_comment.comment %></td>
                <td>
                  <% if current_user == post_comment.user %>
                    <%= link_to "削除", public_post_post_comment_path(@post, post_comment), method: :delete, data: { confirm: "本当に削除しますか？" } %>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <%= link_to "戻る", public_user_path, class: "btn btn-secondary" %>
    </div>
  </div>
</div>
