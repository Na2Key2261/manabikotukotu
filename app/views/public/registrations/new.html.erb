<section class="container">
  <div class="card">
    <div class="card-body">
      <h2 class="card-title">新規会員登録</h2>

      <%= form_with model: @user, url: user_registration_path, local: true do |f| %>
        <%= render 'layouts/error_messages', resource: @user %>

        <div class="form-group">
          <%= f.label :name, "ニックネーム" %>
          <%= f.text_field :name, class: "form-control", placeholder: "ニックネーム" %>
        </div>

        <div class="form-group">
          <%= f.label :email, "メールアドレス" %>
          <%= f.email_field :email, class: "form-control", autocomplete: "email" %>
        </div>

        <div class="form-group">
          <%= f.label :password, "パスワード(#{@minimum_password_length}文字以上)" %>
          <%= f.password_field :password, class: "form-control", autocomplete: "new-password" %>
        </div>

        <div class="form-group">
          <%= f.label :password_confirmation, "パスワード(確認用)" %>
          <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "new-password" %>
        </div>

        <div class="form-group">
          <%= f.submit "新規登録", class: "btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>

  <div class="card mt-4">
    <div class="card-body">
      <h2 class="card-title">既に登録済みの方</h2>
      <p><%= link_to "こちら", new_user_session_path, class: "underline" %>からログインしてください。</p>
    </div>
  </div>
</section>
