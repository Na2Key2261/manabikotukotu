<div class="container">
  <div class="row justify-content-center mt-4">
    <div class="col-md-6">
      <div class="card">
        <div class="card-body">
          <h2 class="text-center mb-4">ユーザー編集</h2>
          
          <p><strong>名前:</strong> <%= @user.name %></p>
          <p><strong>メールアドレス:</strong> <%= @user.email %></p>
          
          <%= form_with(model: @user, url: admin_user_path(@user), method: :patch) do |form| %>
            <div class="form-group">
              <%= form.label :is_active, '会員ステータス' %>
              <%= form.select :is_active, options_for_select([['有効', true], ['停止', false]], @user.is_active), { class: 'form-control' } %>
            </div>
          
            <div class="text-center">
              <%= form.submit '更新', class: 'btn btn-primary' %>
            </div>
          <% end %>
          
          <%= link_to '戻る', admin_users_path, class: 'btn btn-secondary mt-3' %>
        </div>
      </div>
    </div>
  </div>
</div>
